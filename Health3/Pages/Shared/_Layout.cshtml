<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoctoEngine</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Health3.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #2c3e50; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="/" style="color: #ecf0f1; font-weight: bold; font-size: 24px;">DoctoEngine</a>

            <!-- Hamburger Menu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="color: #ecf0f1;"></span>
            </button>

            <!-- Navbar Content -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" href="/" style="color: #ecf0f1;">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Privacy" style="color: #ecf0f1;">Privacy</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <span class="navbar-text me-3" style="color: #bdc3c7;">Hello, @User.Identity.Name!</span>
                        <form id="logoutForm" method="post" action="/Account/Logout" style="display: inline;">
                            <button type="submit" class="btn btn-outline-light" style="border-color: #ecf0f1; color: #ecf0f1;">Logout</button>
                        </form>


                    }
                    else
                    {
                        <a class="nav-link text-light me-3" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!--<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Doctolab - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer> -->

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
